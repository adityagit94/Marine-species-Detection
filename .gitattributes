# Set default behavior for line endings
* text=auto

# Force LF for shell scripts
*.sh text eol=lf

# Force CRLF for Windows batch files
*.bat text eol=crlf

# Binary files
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.pt binary
*.pth binary
*.onnx binary
*.whl binary
*.zip binary
*.tar.gz binary

# Documentation files
*.md text
*.rst text
*.txt text

# Configuration files
*.json text
*.yaml text
*.yml text
*.toml text
*.cfg text
*.ini text

# Python files
*.py text
*.pyx text
*.pyi text

# Web files
*.html text
*.css text
*.js text

# Keep Jupyter notebooks with LF endings
*.ipynb text eol=lf
